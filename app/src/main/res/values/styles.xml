<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PestoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pestoPrimary</item>
        <item name="colorPrimaryDark">@color/pestoPrimaryDark</item>
        <item name="colorAccent">@color/pestoAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="PestoTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pestoPrimary</item>
        <item name="colorPrimaryDark">@color/pestoPrimaryDark</item>
        <item name="colorAccent">@color/pestoAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>
</resources>
